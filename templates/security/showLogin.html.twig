{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<h1>Login</h1>
    {{ form_start(loginForm) }}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <span>admin@admin.sou</span><br/>
        <span>admin</span>
        {{ form_row(loginForm.email, {'value': last_username }) }}
        {{ form_row(loginForm.password) }}
    <label>
        <input type="checkbox" name="_remember_me"> Se souvener de moi
    </label>
        <button type="submit">Se connecter</button>
    {{ form_end(loginForm) }}
{% endblock %}
